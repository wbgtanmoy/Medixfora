<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_outer_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="0dp"
    android:background="@drawable/rounded_corner_white_border"
    >

    <com.brandhype.medixfora.customviews.CircleImageView
        android:id="@+id/request_imageViewIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/careathome_req"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_centerVertical="true"
        app:border_width="2dp"
        app:border_color="@color/grey"
        />

    <RelativeLayout
        android:id="@+id/request_inner_menu"
        android:layout_toRightOf="@+id/request_imageViewIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:id="@+id/request_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:paddingBottom="0dp"
            android:paddingLeft="1dp"
            >

            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Bold.ttf"
                android:id="@+id/request_itemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Requested Item Name.Requested Item NameRequested Item Name"

                />


            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/request_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:textSize="@dimen/font_size_12"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Message along with the request.Message along with the request. Message along with the request"

                />

            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/request_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:textSize="@dimen/font_size_12"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Address"

                />

            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/request_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/font_size_12"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="11th October, 2017"
                android:layout_gravity="right"
                />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/request_listdivider"
        android:layout_below="@+id/request_inner_menu"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginTop="5dp"
        android:background="#bcbcbc"/>

</RelativeLayout>