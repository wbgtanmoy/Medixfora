<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="com.brandhype.medixfora.fragments.DoctorSettingsFragment">

    <ScrollView
        android:id="@+id/doc_settings_main_scroll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin"
            android:layout_marginRight="@dimen/login_margin"
            android:layout_marginTop="20dp"
            android:paddingBottom="40dp"
            android:orientation="vertical"
            >

            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/doctor_settings_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doctsetingtxt"
                android:textColor="@color/black"
                android:background="#ffffff"
                android:layout_gravity="left"
                android:textSize="@dimen/font_size_14"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="7dp"
                android:visibility="visible"
                />

            <!-- doctor password -->
            <RelativeLayout
                android:id="@+id/doc_settings_pass_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/line_text"
                android:paddingBottom="10dp"
                >
                <com.brandhype.medixfora.customviews.CustomTextView
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/doctor_settings_password_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/button_color"
                    android:background="#ffffff"
                    android:layout_gravity="left"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="7dp"
                    android:visibility="visible"
                    />
                <com.brandhype.medixfora.customviews.CustomEditText
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/doc_settings_password"
                    android:layout_below="@+id/doctor_settings_password_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greydeep"
                    android:textSize="@dimen/font_size_edittxt"
                    android:text=""
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <!-- doctor confirm password -->
            <RelativeLayout
                android:id="@+id/doc_settings_cpass_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/line_text"
                android:paddingBottom="10dp"
                >
                <com.brandhype.medixfora.customviews.CustomTextView
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/doctor_settings_cpassword_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retype Password"
                    android:textColor="@color/button_color"
                    android:background="#ffffff"
                    android:layout_gravity="left"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="7dp"
                    android:visibility="visible"
                    />
                <com.brandhype.medixfora.customviews.CustomEditText
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/doc_settings_cpassword"
                    android:layout_below="@+id/doctor_settings_cpassword_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greydeep"
                    android:textSize="@dimen/font_size_edittxt"
                    android:text=""
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>


            <!-- submit -->
            <com.brandhype.medixfora.customviews.CustomButton
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/doc_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_corner_cyan_button"
                android:text="Submit"
                android:textStyle="normal"
                android:textSize="@dimen/font_buttontxt"
                android:textAllCaps="false"
                />



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
