<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#bcbcbc"
    tools:context="com.brandhype.medixfora.fragments.FeedbackFragment">

    <ScrollView
        android:id="@+id/scroll_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/scroll_feedback_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_white_border"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="20dp"
            >
            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/label_feedback"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:text="Please fill in your feedback below."
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70dp"
                android:background="@drawable/contact_us_company"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />


            <!-- firstname -->
            <RelativeLayout
                android:id="@+id/feedback_firstname_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/line_text"
                android:paddingBottom="10dp"
                >

                <com.brandhype.medixfora.customviews.CustomTextView
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/feedback_firstname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/button_color"
                    android:background="@color/transparent"
                    android:layout_gravity="left"
                    android:textSize="@dimen/font_size_12"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="7dp"
                    android:visibility="visible"
                    />
                <com.brandhype.medixfora.customviews.CustomEditText
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/feedback_firstname"
                    android:layout_below="@+id/feedback_firstname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:hint="First Name"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greydeep"
                    android:textSize="@dimen/font_size_12"
                    android:text=""
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <!-- lastname -->
            <RelativeLayout
                android:id="@+id/feedback_lastname_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/line_text"
                android:paddingBottom="10dp"
                android:visibility="gone"
                >
                <com.brandhype.medixfora.customviews.CustomTextView
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/feedback_lastname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textColor="@color/button_color"
                    android:background="@color/transparent"
                    android:layout_gravity="left"
                    android:textSize="@dimen/font_size_12"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="7dp"

                    />
                <com.brandhype.medixfora.customviews.CustomEditText
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/feedback_lastname"
                    android:layout_below="@+id/feedback_lastname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:hint="Lastname"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greydeep"
                    android:textSize="@dimen/font_size_12"
                    android:text=""
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>


            <!--  email -->
            <RelativeLayout
                android:id="@+id/feedback_email_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/line_text"
                android:paddingBottom="10dp"
                >
                <com.brandhype.medixfora.customviews.CustomTextView
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/feedback_email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/button_color"
                    android:background="@color/transparent"
                    android:layout_gravity="left"
                    android:textSize="@dimen/font_size_12"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="7dp"
                    android:visibility="visible"
                    />
                <com.brandhype.medixfora.customviews.CustomEditText
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/feedback_email"
                    android:layout_below="@+id/feedback_email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:hint="Email"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greydeep"
                    android:textSize="@dimen/font_size_12"
                    android:text=""
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>


            <!--  feedback text -->
            <LinearLayout
                android:id="@+id/healthtips_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/feedback_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rounded_corner_search"
                    android:gravity="left|top"
                    android:hint="Type your feebback here"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/edittext_hint"
                    android:textSize="@dimen/font_size_12" />
            </LinearLayout>


            <!-- buttons -->
            <LinearLayout
                android:id="@+id/feedback_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <com.brandhype.medixfora.customviews.CustomButton
                    android:id="@+id/feedback_submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rounded_corner_cyan_button"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Submit Feedback"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="normal"
                    app:myfont="OpenSans_Regular.ttf" />

                <!--<com.codopoliz.medixfora.customviews.CustomButton
                    android:id="@+id/feedback_cancel_btn"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rounded_corner_cyan_button"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="normal"
                    app:myfont="OpenSans_Regular.ttf" />-->

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>