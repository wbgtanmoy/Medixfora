<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    tools:context="com.brandhype.medixfora.fragments.OrderDetailsFragment">

    <com.brandhype.medixfora.customviews.CustomTextView
        app:myfont="OpenSans_Bold.ttf"
        android:id="@+id/orderItemDetails_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/bottle_green"
        android:background="@color/transparent"
        android:text="ORDER NUMBER "
        android:textStyle="normal"
        android:textSize="@dimen/font_size_16"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/patientOrderDetails_List"
        android:layout_below="@+id/orderItemDetails_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        />

    <ImageView
        android:id="@+id/norecordfound_patientOrderDetails"
        android:layout_below="@id/patientOrderDetails_List"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/norecordfound"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        />


</RelativeLayout>
