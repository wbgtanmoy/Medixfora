<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/docappt_outer_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="0dp"
    android:background="@drawable/rounded_corner_white_border"
    >

    <RelativeLayout
        android:id="@+id/message_inner_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:id="@+id/message_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:paddingBottom="0dp"
            android:paddingLeft="5dp"
            >

            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Bold.ttf"
                android:id="@+id/message_qs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Question goes here"

                />


            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/message_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="this is the reply"

                />

            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/font_size_12"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="11th October, 2017"
                android:layout_gravity="right"
                />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/message_listdivider"
        android:layout_below="@+id/message_inner_menu"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginTop="5dp"
        android:background="#bcbcbc"/>

</RelativeLayout>