<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/speciality_outer_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <FrameLayout
        android:id="@+id/speciality_inner_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="5dp"
        >

        <ImageView
            android:id="@+id/speciality_imageViewIcon"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/rounded_corner_cyan_button"
            android:scaleType="fitXY"
             />
        <!--<View
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>-->

        <com.brandhype.medixfora.customviews.CustomTextView
            app:myfont="OpenSans_Regular.ttf"
            android:id="@+id/speciality_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/font_size_14"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="Specility tile will be displayed over here, this will be cetrally aligned"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            />

        <ProgressBar
            android:id="@+id/speciality_progress"
            android:indeterminateDrawable="@drawable/progress_animation"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            ></ProgressBar>

        </FrameLayout>


</FrameLayout>