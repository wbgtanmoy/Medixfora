<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brandhype.medixfora.fragments.MyPrescriptionFragment">

    <ListView
        android:id="@+id/oldPrescriptions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <ImageView
        android:id="@+id/norecordfound_prescription"
        android:layout_below="@id/oldPrescriptions"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/norecordfound"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        />

</LinearLayout>
