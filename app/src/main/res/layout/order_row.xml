<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/orderItem_outer_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:background="@color/transparent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        card_view:contentPaddingTop="5dp"
        card_view:contentPaddingBottom="5dp"
        card_view:contentPaddingLeft="4dp"
        card_view:contentPaddingRight="4dp"
        >

        <RelativeLayout
            android:id="@+id/orderItem_inner_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/orderItem_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/orderItem_button"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal"
                    android:background="@drawable/order_bg"

                    >

                    <com.brandhype.medixfora.customviews.CustomTextView
                        app:myfont="OpenSans_Bold.ttf"
                        android:id="@+id/orderItem_number_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="@dimen/font_size_12"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Order No: "
                        android:layout_gravity="center_vertical"
                        />
                    <com.brandhype.medixfora.customviews.CustomTextView
                        app:myfont="OpenSans_Bold.ttf"
                        android:id="@+id/orderItem_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="MDX_20171110114"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <com.brandhype.medixfora.customviews.CustomTextView
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/orderItem_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="1dp"
                    android:textSize="@dimen/font_size_12"
                    android:textStyle="normal"
                    android:textColor="@color/greydeep"
                    android:text="2017-11-10 11:48:59"
                    android:layout_centerVertical="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.brandhype.medixfora.customviews.CustomTextView
                        app:myfont="OpenSans_Bold.ttf"
                        android:id="@+id/orderItem_amount_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:textSize="@dimen/font_size_12"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        android:text="Amount: "
                        android:layout_centerVertical="true"
                        />
                    <com.brandhype.medixfora.customviews.CustomTextView
                        app:myfont="OpenSans_Regular.ttf"
                        android:id="@+id/orderItem_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:textSize="@dimen/font_size_12"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="320"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.brandhype.medixfora.customviews.CustomTextView
                        app:myfont="OpenSans_Bold.ttf"
                        android:id="@+id/orderItem_status_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:textSize="@dimen/font_size_12"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        android:text="Status: "
                        android:layout_centerVertical="true"
                        />
                    <com.brandhype.medixfora.customviews.CustomTextView
                        app:myfont="OpenSans_Regular.ttf"
                        android:id="@+id/orderItem_status"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:textSize="@dimen/font_size_12"
                        android:textStyle="normal"
                        android:textColor="@color/bottle_green"
                        android:text="PAID"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        />
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/orderItem_divider"
                android:layout_toRightOf="@+id/orderItem_details"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimaryDark"/>


            <LinearLayout
                android:id="@+id/orderItem_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >



                <com.brandhype.medixfora.customviews.CustomButton
                    app:myfont="OpenSans_Regular.ttf"
                    android:id="@+id/orderItem_details_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_corner_cyan_button"
                    android:text="Details"
                    android:textStyle="normal"
                    android:textSize="@dimen/font_size_14"
                    android:textAllCaps="false"
                    />
            </LinearLayout>


        </RelativeLayout>

        <!--<View
            android:id="@+id/orderItem_listdivider"
            android:layout_below="@+id/orderItem_inner_menu"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginTop="10dp"
            android:background="#bcbcbc"/>-->
    </android.support.v7.widget.CardView>

</RelativeLayout>