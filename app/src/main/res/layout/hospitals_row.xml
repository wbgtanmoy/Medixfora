<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/speciality_outer_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@color/light_grey">


    <FrameLayout
        android:id="@+id/speciality_inner_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/transparent"
            >

            <ImageView
                android:id="@+id/speciality_imageViewIcon"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:src="@drawable/rounded_corner_cyan_button"
                android:scaleType="fitXY"
                 />

            <com.brandhype.medixfora.customviews.CustomTextView
                app:myfont="OpenSans_Regular.ttf"
                android:id="@+id/speciality_title"
                android:layout_weight=".75"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/font_size_14"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Specility tile will be displayed over here, this will be cetrally aligned"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="left"
                />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/speciality_progress"
            android:indeterminateDrawable="@drawable/progress_animation"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            ></ProgressBar>

        </FrameLayout>


</android.support.v7.widget.CardView>